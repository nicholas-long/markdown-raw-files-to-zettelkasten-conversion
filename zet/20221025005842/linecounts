#!/usr/bin/awk -f
# count lines in cards
/^# Related/ { nextfile } # skip related
/^ *$/ { next } # skip empty
/^# / { next } # skip title
/^```/ { next } # skip snippet start/end
/^` zet/ { next } # skip autogenerated filename snip
/\[[^ ]*\]\([^ ]*\)/ { next }
{ count++ }
ENDFILE { print count, FILENAME }
BEGINFILE { count = 0 }
